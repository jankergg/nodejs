    script(type='text/javascript')
      var socket = io.connect('http://'192.168.100.178':3000');
      socket.on('connect', function () {
        $("#btn-set").click(function(){
          var $stime = $('#starttime').val(),$etime = $('#endtime').val(),$pid = $('#pid').val();
            if($etime!==""&&$pid!==""){
              socket.emit("_setprice",{__st:$stime,__et:$etime,__id:$pid})
            }
            $('#starttime').val("");
            $('#endtime').val("");
            $('#pid').val("");
        });

      socket.on('send_pid',function(result){
        var pid_+(new Date()).getTime() = new Timer(result.stime,"timeshow",function(){alert("time out")
        $('span#pname').html(result.pname);
        $('span#prise').html(result.prise);
      })


      });


